{
  "name": "@react-testing-utils/testing-library-react",
  "version": "1.0.0",
  "description": "The utils package for react testing library",
  "scripts": {
    "postinstall": "husky install",
    "clean-artifacts": "node utils/clean.js",
    "build": "tsc",
    "build:local": "yarn run clean-artifacts && yarn run build",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzanatoliy/react-testing-library-utils.git"
  },
  "keywords": [
    "react",
    "react-testing-library",
    "tests",
    "jest"
  ],
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "author": "Anatoli Kuzmiankou <njkznu@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kuzanatoliy/react-testing-library-utils/issues"
  },
  "homepage": "https://github.com/kuzanatoliy/react-testing-library-utils#readme",
  "devDependencies": {
    "@testing-library/react": "^13.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "react": "^18.0.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  },
  "dependencies": {
    "@types/jest": "^28.1.6"
  }
}
